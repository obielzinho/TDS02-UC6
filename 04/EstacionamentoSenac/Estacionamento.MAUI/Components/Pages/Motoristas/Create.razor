@page "/motorista/create"
@using Estacionamento.MAUI.Models
@inject HttpClient Http

<h3>Novo Motorista</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="nome" class="control-label">Nome</label>
                <input for="nome" class="form-control" />
            </div>
            <div class="form-group">
                <label for="veiculo" class="control-label">Veículo</label>
                <select for="veiculo" class="form-control">

                    <option> selecione um veiculo </option>
                    @if (veiculos != null)
                    {
                        @foreach (var veiculo in veiculos)
                        {
                            <option>@veiculo.Marca - @veiculo.Modelo</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="#" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>

@code {
    List<Veiculo>? veiculos;

    protected override async Task OnInitializedAsync()
    {
        veiculos = await Http.GetFromJsonAsync<List<Veiculo>>("https://localhost:4000/api/Veiculos");
    }
}
