@page "/registros/details/{Id:int}"
@inject HttpClient Http
@using Estacionamento.MAUI.Models

<h3>Detalhes do Registro</h3>

@if (true)
{
    <p><em>Carregando...</em></p>
}
else
{
    <p><strong>ID:</strong> Id</p>
    <p><strong>Veículo:</strong> Veiculo?.Placa</p>
    <p><strong>Vaga:</strong> Vaga?.Localizacao</p>
    <p><strong>Entrada:</strong> DataHoraEntrada</p>
    <p><strong>Saída:</strong> DataHoraSaida</p>
    <p><strong>Valor Final:</strong> ValorFinal?.ToString("C")</p>

    <a href="#" class="btn btn-primary">Editar</a>
    <a href="#" class="btn btn-secondary">Voltar</a>
}

